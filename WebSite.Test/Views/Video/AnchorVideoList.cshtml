
@{
    ViewBag.Title = "主播视频列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">主播视频列表</h2>
<form class="form-horizontal" action="/Video/AnchorVideoList" method="post">
    <div class="form-group">
        <label for="txtUserId" class="col-sm-1 control-label">userid</label>
        <div class="col-sm-10">
            <input name="userId" type="text" class="form-control" id="txtUserId" placeholder="用户Id">
        </div>
    </div>

    <div class="form-group">
        <label for="txtToken" class="col-sm-1 control-label">token</label>
        <div class="col-sm-10">
            <input name="token" type="text" class="form-control" id="txtToken" placeholder="用户Token">
        </div>
    </div>

    <div class="form-group">
        <label for="txtAnchorId" class="col-sm-1 control-label">anchorid</label>
        <div class="col-sm-10">
            <input name="anchorId" type="text" class="form-control" id="txtAnchorId" placeholder="主播Id">
        </div>
    </div>

    <div class="form-group">
        <label for="txtPageIndex" class="col-sm-1 control-label">pageindex</label>
        <div class="col-sm-10">
            <input name="pageIndex" type="text" class="form-control" id="txtPageIndex" placeholder="页码（索引从1开始）">
        </div>
    </div>

    <div class="form-group">
        <label for="txtPageSize" class="col-sm-1 control-label">pagesize</label>
        <div class="col-sm-10">
            <input name="pageSize" type="text" class="form-control" id="txtPageSize" placeholder="每页条数">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
    <div class="form-group">
        <label for="txtResult" class="col-sm-1 control-label">Result</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="txtResult" rows="5">@ViewData["Result"]</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <h3>接口返回参数说明：</h3>
            <p><strong>VideoId：</strong>视频Id</p>
            <p><strong>UserId：</strong>上传用户Id</p>
            <p><strong>NickName：</strong>上传用户昵称</p>
            <p><strong>Description：</strong>视频描述</p>
            <p><strong>IsAnchor：</strong>是否为主播</p>
            <p><strong>AuthStatus：</strong>0：未认证；1：认证中； 2：已认证</p>
            <p><strong>CallRatio：</strong>呼叫费用如:100棉花糖/分钟</p>
            <p><strong>NeteaseAccId：</strong>网易通信账号</p>
            <p><strong>NeteaseChatStatus：</strong>0：离线；1：在聊； 2：空闲</p>
            <p><strong>Link：</strong>视频连接</p>
            <p><strong>ImgPath：</strong>视频封面</p>
            <p><strong>Praises：</strong>点赞数</p>
            <p><strong>IsPraise：</strong>是否点赞</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <p><a href="~/Default/Index" class="btn btn-default" style="text-align:left" role="button">返回接口列表</a></p>
        </div>
    </div>
</form>