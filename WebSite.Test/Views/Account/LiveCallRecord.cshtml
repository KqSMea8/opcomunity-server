
@{
    ViewBag.Title = "记录视频通讯";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">记录视频通讯</h2>
<form class="form-horizontal" action="/Account/LiveCallRecord" method="post">
    <div class="form-group">
        <label for="txtUserId" class="col-sm-1 control-label">userid</label>
        <div class="col-sm-10">
            <input name="userId" type="text" class="form-control" id="txtUserId" placeholder="用户Id">
        </div>
    </div>

    <div class="form-group">
        <label for="txtAnchorId" class="col-sm-1 control-label">anchorid</label>
        <div class="col-sm-10">
            <input name="anchorId" type="text" class="form-control" id="txtAnchorId" placeholder="主播Id">
        </div>
    </div>

    <div class="form-group">
        <label for="txtSender" class="col-sm-1 control-label">sender</label>
        <div class="col-sm-10">
            <input name="sender" type="text" class="form-control" id="txtSender" placeholder="发送者：【0】用户发送；【1】主播发送">
        </div>
    </div>

    <div class="form-group">
        <label for="txtToken" class="col-sm-1 control-label">token</label>
        <div class="col-sm-10">
            <input name="token" type="text" class="form-control" id="txtToken" placeholder="用户Token【谁发起的记录，传入谁的Token】">
        </div>
    </div>

    <div class="form-group">
        <label for="txtLiveId" class="col-sm-1 control-label">liveid</label>
        <div class="col-sm-10">
            <input name="liveId" type="text" class="form-control" id="txtLiveId" placeholder="网易视频通话Id">
        </div>
    </div>

    <div class="form-group">
        <label for="txtStart" class="col-sm-1 control-label">start</label>
        <div class="col-sm-10">
            <input name="start" type="text" class="form-control" id="txtStart" placeholder="开始时间">
        </div>
    </div>

    <div class="form-group">
        <label for="txtEnd" class="col-sm-1 control-label">end</label>
        <div class="col-sm-10">
            <input name="end" type="text" class="form-control" id="txtEnd" placeholder="结束时间">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
    <div class="form-group">
        <label for="txtResult" class="col-sm-1 control-label">Result</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="txtResult" rows="5">@ViewData["Result"]</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <p><a href="~/Default/Index" class="btn btn-default" style="text-align:left" role="button">返回接口列表</a></p>
        </div>
    </div>
</form>



