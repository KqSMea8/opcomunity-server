
@{
    ViewBag.Title = "根据网易云账号Id获取普通用户个人信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">根据网易云账号Id获取普通用户个人信息</h2>
<form class="form-horizontal" action="/Account/GetUserInfoByAccId" method="post">
    <div class="form-group">
        <label for="txtAccId" class="col-sm-1 control-label">accid</label>
        <div class="col-sm-10">
            <input name="accId" type="text" class="form-control" id="txtAccId" placeholder="网易云Id">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
    <div class="form-group">
        <label for="txtResult" class="col-sm-1 control-label">Result</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="txtResult" rows="5">@ViewData["Result"]</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <h3>接口返回参数说明：</h3>
            <p><strong>UserId：</strong>用户Id</p>
            <p><strong>Description：</strong>签名</p>
            <p><strong>Constellation：</strong>星座</p>
            <p><strong>Glamour：</strong>魅力值（0）</p>
            <p><strong>NeteaseAccId：</strong>网易通信账号</p>
            <p><strong>NeteaseLoginStatus：</strong>0：离线；1：在线</p>
            <p><strong>NeteaseChatStatus：</strong>0：离线；1：在聊； 2：空闲</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <p><a href="~/Default/Index" class="btn btn-default" style="text-align:left" role="button">返回接口列表</a></p>
        </div>
    </div>
</form>



