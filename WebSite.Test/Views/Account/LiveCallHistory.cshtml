
@{
    ViewBag.Title = "视频通话记录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">视频通话记录</h2>
<form class="form-horizontal" action="/Account/LiveCallHistory" method="post">
    <div class="form-group">
        <label for="txtUserId" class="col-sm-1 control-label">userid</label>
        <div class="col-sm-10">
            <input name="userId" type="text" class="form-control" id="txtUserId" placeholder="用户Id">
        </div>
    </div>

    <div class="form-group">
        <label for="txtToken" class="col-sm-1 control-label">token</label>
        <div class="col-sm-10">
            <input name="token" type="text" class="form-control" id="txtToken" placeholder="Token">
        </div>
    </div>

    <div class="form-group">
        <label for="txtPageIndex" class="col-sm-1 control-label">pageindex</label>
        <div class="col-sm-10">
            <input name="pageIndex" type="text" class="form-control" id="txtPageIndex" placeholder="页码（索引从1开始）">
        </div>
    </div>

    <div class="form-group">
        <label for="txtPageSize" class="col-sm-1 control-label">pagesize</label>
        <div class="col-sm-10">
            <input name="pageSize" type="text" class="form-control" id="txtPageSize" placeholder="每页条数">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
    <div class="form-group">
        <label for="txtResult" class="col-sm-1 control-label">Result</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="txtResult" rows="5">@ViewData["Result"]</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <h3>接口返回参数说明：</h3>
            <p><strong>Id：</strong>本次通话的ChannelId</p>
            <p><strong>UserId：</strong>对方Id</p>
            <p><strong>UserName：</strong>对方昵称</p>
            <p><strong>UserAvatar：</strong>对方头像</p>
            <p><strong>IsAnchor：</strong>对方是否是主播</p>
            <p><strong>CallRatio：</strong>呼叫费用如:20棉花糖/分钟</p>
            <p><strong>TotalFee：</strong>本次通话总费用</p>
            <p><strong>CallTime：</strong>通话开始时间(时间戳格式)</p>
            <p><strong>TotalSecond：</strong>总时长（秒）</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <p><a href="~/Default/Index" class="btn btn-default" style="text-align:left" role="button">返回接口列表</a></p>
        </div>
    </div>
</form>



