
@{
    ViewBag.Title = "修改用户头像";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align: center;">修改用户头像</h2>
<form class="form-horizontal" action="/Account/ModifyAvatar" enctype="multipart/form-data" id="iform" method="post">
    <div class="form-group">
        <label for="txtUserId" class="col-sm-1 control-label">userid</label>
        <div class="col-sm-10">
            <input name="userId" type="text" class="form-control" id="txtUserId" placeholder="用户Id">
        </div>
    </div>

    <div class="form-group">
        <label for="txtToken" class="col-sm-1 control-label">token</label>
        <div class="col-sm-10">
            <input name="token" type="text" class="form-control" id="txtToken" placeholder="Token">
        </div>
    </div>

    <div class="form-group">
        <label for="avatar" class="col-sm-1 control-label">头像</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" name="avatar" id="avatar">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
    <div class="form-group">
        <label for="txtResult" class="col-sm-1 control-label">Result</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="txtResult" rows="5">@ViewData["Result"]</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <p><a href="~/Default/Index" class="btn btn-default" style="text-align:left" role="button">返回接口列表</a></p>
        </div>
    </div>
</form>



