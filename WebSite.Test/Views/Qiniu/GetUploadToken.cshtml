
@{
    ViewBag.Title = "获取七牛上传凭证";
}
<h2 style="text-align: center;">获取七牛上传凭证</h2>
<form class="form-horizontal" action="/Qiniu/GetUploadToken" method="post">
    <div class="form-group">
        <label for="txtUserId" class="col-sm-1 control-label">userid</label>
        <div class="col-sm-10">
            <input name="userId" type="text" class="form-control" id="txtUserId" placeholder="上传用户Id">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPrice" class="col-sm-1 control-label">price</label>
        <div class="col-sm-10">
            <input name="price" type="text" class="form-control" id="txtPrice" placeholder="作品价格">
        </div>
    </div>
    <div class="form-group">
        <label for="txtDescription" class="col-sm-1 control-label">description</label>
        <div class="col-sm-10">
            <input name="description" type="text" class="form-control" id="txtDescription" placeholder="作品描述">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-primary">提交</button>
        </div>
    </div>
    <div class="form-group">
        <label for="txtResult" class="col-sm-1 control-label">Result</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="txtResult" rows="5">@ViewData["Result"]</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <p><a href="~/Default/Index" class="btn btn-default" style="text-align:left" role="button">返回接口列表</a></p>
        </div>
    </div>
</form>

